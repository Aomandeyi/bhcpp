#include <iostream>
#include <string>
using namespace std;

void Hello(string const name)
{
    cout << "Hello! " << name << "." << endl;
}

//这是一行，准备和上一行交换位置: Ctrl + T
//现在，我们来演示切换注释：Ctrl + /

int main()
{    
    string name;
    
    cout << "Please input the name: ";
    getline(cin, name);
    Hello(name);
    
    name = "BOSS";
    Hello(name);
    return 0;
}
